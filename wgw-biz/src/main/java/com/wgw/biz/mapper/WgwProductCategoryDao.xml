<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wgw.biz.dao.WgwProductCategoryDao">

    <resultMap type="com.wgw.biz.entity.WgwProductCategory" id="WgwProductCategoryMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentid" column="parentId" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="iconclass" column="iconClass" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WgwProductCategoryMap">
        select
          id, name, parentId, type, iconClass
        from wgw.wgw_product_category
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WgwProductCategoryMap">
        select
          id, name, parentId, type, iconClass
        from wgw.wgw_product_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="WgwProductCategoryMap">
        select
          id, name, parentId, type, iconClass
        from wgw.wgw_product_category
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="parentid != null">
                and parentId = #{parentid}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="iconclass != null and iconclass != ''">
                and iconClass = #{iconclass}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wgw.wgw_product_category(name, parentId, type, iconClass)
        values (#{name}, #{parentid}, #{type}, #{iconclass})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wgw.wgw_product_category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="parentid != null">
                parentId = #{parentid},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="iconclass != null and iconclass != ''">
                iconClass = #{iconclass},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wgw.wgw_product_category where id = #{id}
    </delete>

</mapper>